<c3p0-config>
    <default-config>
        <property name="maxConnectionAge">43200</property>
        <property name="maxIdleTime">240</property>
        <property name="maxPoolSize">50</property>
    </default-config>
    <named-config name="sql-test">
        <property name="driverClass">org.h2.Driver</property>
        <property name="jdbcUrl">jdbc:h2:mem:~/test?rewriteBatchedStatements=true;MODE=MYSQL</property>
        <property name="user">sa</property>
        <property name="password"></property>
    </named-config>
</c3p0-config>
